# The simplest example. Show an anti aliased white font.
# Uses: Solid

[default]
name = ./fonts/verdana.ttf
size = 42

letters = letters_ascii.txt

bgcolor = (255,255,255)

writer = fontout_json
texturerender = fonttex_bitmap
texturewriter = fonttexout_pil
textureformat = .png
texturesize = 512, 256

layers = [Layer(color=solid_fill)]

# modes: none, light, normal. Default is 'normal'
antialias = normal


[solid_fill]
type = solid
color = (255, 255, 255)
